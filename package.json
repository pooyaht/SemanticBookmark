{
  "name": "semantic-bookmark",
  "version": "0.1.0",
  "description": "A cross-browser extension for semantic search over bookmarks with AI-powered embeddings",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "webpack --config build/webpack.dev.js --watch",
    "dev:chrome": "cross-env BROWSER=chrome npm run dev",
    "dev:firefox": "cross-env BROWSER=firefox npm run dev",
    "build": "webpack --config build/webpack.prod.js",
    "build:all": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "cross-env BROWSER=chrome npm run build",
    "build:firefox": "cross-env BROWSER=firefox npm run build",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "type-check": "tsc --noEmit",
    "package:chrome": "cd dist/chrome && zip -r ../semantic-bookmark-chrome.zip .",
    "package:firefox": "cd dist/firefox && zip -r ../semantic-bookmark-firefox.zip .",
    "package:all": "npm run package:chrome && npm run package:firefox",
    "clean": "rm -rf dist node_modules/.cache",
    "prepare": "husky install || true"
  },
  "keywords": [
    "browser-extension",
    "semantic-search",
    "bookmarks",
    "ai",
    "embeddings",
    "chrome-extension",
    "firefox-addon",
    "tensorflow",
    "vector-search"
  ],
  "author": "Pooya Hatami",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pooyaht/SemanticBookmark.git"
  },
  "bugs": {
    "url": "https://github.com/pooyaht/SemanticBookmark/issues"
  },
  "homepage": "https://github.com/pooyaht/SemanticBookmark#readme",
  "dependencies": {
    "webextension-polyfill": "^0.12.0",
    "dexie": "^4.0.8",
    "@tensorflow/tfjs": "^4.22.0",
    "@tensorflow-models/universal-sentence-encoder": "^1.3.3",
    "@mozilla/readability": "^0.5.0",
    "jsdom": "^25.0.1",
    "robots-parser": "^3.0.1",
    "ml-distance": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/chrome": "^0.0.277",
    "@types/firefox-webext-browser": "^143.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.9.0",
    "@types/webextension-polyfill": "^0.12.1",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "fake-indexeddb": "^6.0.0",
    "globals": "^16.5.0",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^9.1.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.3.3",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^6.0.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.3",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  }
}
